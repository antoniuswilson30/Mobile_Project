<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/full"
        android:layout_marginTop="3sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_baseline_person_24">

                </ImageView>

                <TextView
                    android:id="@+id/list_dokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Nama Dokter"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_baseline_calendar_today_24">

                </ImageView>

                <TextView
                    android:id="@+id/list_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Tanggal"
                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:textSize="18dp"></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_baseline_access_time_24">

                </ImageView>

                <TextView
                    android:id="@+id/list_waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Waktu"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:textSize="18dp"></TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_baseline_library_books_24">

                </ImageView>

                <TextView
                    android:id="@+id/list_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Status"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:textSize="18dp"></TextView>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/tombolDelete"
        android:layout_width="47dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_delete_outline_241"
        android:background="@drawable/button3"
        android:layout_marginRight="10dp"
        >
    </ImageButton>



</RelativeLayout>